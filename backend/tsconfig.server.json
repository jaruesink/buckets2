{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./server-tsc",
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": [ "es6", "dom" ]
  },
  "include": [
    "server/server.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**"
  ]
}